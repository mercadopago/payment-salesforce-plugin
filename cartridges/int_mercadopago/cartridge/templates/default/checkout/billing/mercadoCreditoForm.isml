      <li>
        <div class="steps">
          <div class="step-number">
            <span>1.</span>
          </div>
          <div class="step-text">
            <p class="span14">
              <b class="semi-bold">${Resource.msg('mercadocredito.firststep.partone', 'mercadopago', null)}</b>
              ${Resource.msg('mercadocredito.firststep.parttwo', 'mercadopago', null)}
              <b class="semi-bold">${Resource.msg('mercadocredito.firststep.partthree', 'mercadopago', null)}</b>
            </p>
          </div>
        </div>
      </li>
      <li>
        <div class="steps">
          <div class="step-number">
            <span>2.</span>
          </div>
          <div class="step-text">
            <p class="span14">
              <b class="semi-bold">${Resource.msg('mercadocredito.secondstep.partone', 'mercadopago', null)}</b>
